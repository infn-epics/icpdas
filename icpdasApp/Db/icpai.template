
record(ai, "$(P):$(R):$(ID)_RB")
{
    field(DESC, "AI$(REGOFFSET)")
    field(DTYP, "asynFloat64")
    field(INP,  "@asyn($(PORT) $(REGOFFSET) $(TIMEOUT=1000))INT16")
    field(SCAN, "I/O Intr")
    field(FLNK, "$(P):$(R):$(ID):VOLT_RB")
}
