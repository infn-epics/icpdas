record(calc, "$(P):$(R):$(ID):VOLT_RB")
{
    field(DESC, "AI$(REGOFFSET) in Volts")
    field(INPA, "$(P):$(R):$(ID)_RB")
    field(CALC, "A / 32768. * $(maxscale=10.)")
    field(PREC, "3")
    field(EGU, "V")
}
